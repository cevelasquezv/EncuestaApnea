<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SondeoPreguntas">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sondeo_uno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/button_rounded"
        android:text="Primer Sondeo De Preguntas"
        android:onClick="btn_primer_sondeo_preguntas"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sondeo_dos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/button_rounded"
        android:text="Segundo Sondeo De Preguntas"
        android:onClick="btn_segundo_sondeo_preguntas"
        android:textColor="@color/black"
        android:textSize="20sp" />

</LinearLayout>